<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/taxi"
        android:adjustViewBounds="true"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/riderOrDriverSwitch"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:checked="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rider"
        android:id="@+id/riderTextView"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/riderOrDriverSwitch"
        android:layout_toLeftOf="@+id/getStartedButton"
        android:layout_toStartOf="@+id/getStartedButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver"
        android:id="@+id/driverTextView"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/riderOrDriverSwitch"
        android:layout_toRightOf="@+id/getStartedButton"
        android:layout_toEndOf="@+id/getStartedButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:id="@+id/getStartedButton"
        android:background="#ffef38"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:onClick="getStarted"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"/>
</RelativeLayout>
